# UFOBeep FastAPI Backend Environment Variables
# NOTE: The API now reads from the main project .env file (../.env)
# This file is kept as reference for required environment variables

# === Application Settings ===
APP_NAME=UFOBeep API
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# === Server Configuration ===
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# === Database Configuration ===
DATABASE_URL=postgresql://username:password@localhost:5432/ufobeep
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# === Redis Configuration ===
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# === Celery Worker Configuration ===
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# === Storage Configuration ===
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=ufobeep-media
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1
MAX_UPLOAD_SIZE=10485760  # 10MB

# === Matrix Configuration ===
MATRIX_BASE_URL=http://localhost:8008
MATRIX_SERVER_NAME=localhost
MATRIX_ACCESS_TOKEN=your_matrix_access_token_here
MATRIX_BOT_USER_ID=@ufobeep-bot:localhost

# === External APIs ===
OPENWEATHER_API_KEY=your_openweather_api_key_here
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5

# === Push Notifications ===
FCM_SERVER_KEY=your_fcm_server_key_here
APNS_KEY_ID=your_apns_key_id_here
APNS_TEAM_ID=your_apns_team_id_here
APNS_BUNDLE_ID=com.ufobeep.ufobeep

# === Security ===
SECRET_KEY=your_secret_key_here_make_it_long_and_random
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=your_32_character_encryption_key_here
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# === Rate Limiting ===
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# === Logging ===
LOG_LEVEL=INFO
LOG_FILE=logs/ufobeep.log
ENABLE_ACCESS_LOGS=true

# === Feature Flags ===
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_MODERATION=true
ENABLE_ANALYTICS=false

# === Enrichment Settings ===
ENABLE_WEATHER_ENRICHMENT=true
ENABLE_CELESTIAL_ENRICHMENT=true
ENABLE_SATELLITE_ENRICHMENT=true
ENABLE_HF_NSFW_FILTER=true
ENRICHMENT_TIMEOUT=30

# === Coordinates Jittering ===
PUBLIC_COORD_JITTER_MIN=100  # meters
PUBLIC_COORD_JITTER_MAX=300  # meters