# UFOBeep Next.js Web Environment Variables
# Copy to .env.local and fill in your values

# === API Configuration ===
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# === Matrix Chat Configuration ===
NEXT_PUBLIC_MATRIX_BASE_URL=http://localhost:8008
NEXT_PUBLIC_MATRIX_SERVER_NAME=localhost

# === App Configuration ===
NEXT_PUBLIC_APP_NAME=UFOBeep
NEXT_PUBLIC_APP_URL=http://localhost:3000

# === Analytics ===
NEXT_PUBLIC_GA_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# === Maps Configuration ===
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# === SEO ===
NEXT_PUBLIC_SITE_NAME=UFOBeep
NEXT_PUBLIC_SITE_DESCRIPTION=Real-time UFO and anomaly sighting alerts
NEXT_PUBLIC_SITE_URL=https://ufobeep.com

# === Feature Flags ===
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_SHARE_API=true

# === Internationalization ===
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,de

# === Build Configuration ===
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1