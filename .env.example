# UFOBeep Environment Variables (Root)
# Copy to .env and fill in your values

# === Common Configuration ===
NODE_ENV=development
DEBUG=true

# === API Configuration ===
API_BASE_URL=http://localhost:8000
API_VERSION=v1

# === Matrix Chat Configuration ===
MATRIX_BASE_URL=http://localhost:8008
MATRIX_SERVER_NAME=localhost

# === Database Configuration ===
DATABASE_URL=postgresql://username:password@localhost:5432/ufobeep
REDIS_URL=redis://localhost:6379/0

# === Storage Configuration ===
# For local development, use MinIO
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=ufobeep-media
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# === External APIs ===
OPENWEATHER_API_KEY=your_openweather_api_key_here

# === Push Notifications ===
FCM_SERVER_KEY=your_fcm_server_key_here
APNS_KEY_ID=your_apns_key_id_here
APNS_TEAM_ID=your_apns_team_id_here

# === Security ===
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# === Internationalization ===
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,de