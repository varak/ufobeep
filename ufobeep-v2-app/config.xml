<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0"
        id="com.ufobeep.app"
        version="2.0.0">
    
    <name>UFOBeep</name>
    <description>Real-time UFO sighting alerts with AR compass overlay</description>
    <author email="contact@ufobeep.com" href="https://ufobeep.com">UFOBeep Team</author>
    
    <content src="src/index.html"/>
    
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="android-minSdkVersion" value="24"/>
    <preference name="android-targetSdkVersion" value="33"/>
    <preference name="BackupWebStorage" value="none"/>
    <preference name="SplashMaintainAspectRatio" value="true"/>
    <preference name="FadeSplashScreenDuration" value="300"/>
    <preference name="SplashShowOnlyFirstTime" value="false"/>
    <preference name="Orientation" value="portrait"/>
    
    <platform name="android">
        <icon density="ldpi" src="assets/icon-36.png"/>
        <icon density="mdpi" src="assets/icon-48.png"/>
        <icon density="hdpi" src="assets/icon-72.png"/>
        <icon density="xhdpi" src="assets/icon-96.png"/>
        <icon density="xxhdpi" src="assets/icon-144.png"/>
        <icon density="xxxhdpi" src="assets/icon-192.png"/>
        
        <splash density="land-ldpi" src="assets/splash-320x200.png"/>
        <splash density="land-mdpi" src="assets/splash-480x320.png"/>
        <splash density="land-hdpi" src="assets/splash-800x480.png"/>
        <splash density="port-ldpi" src="assets/splash-200x320.png"/>
        <splash density="port-mdpi" src="assets/splash-320x480.png"/>
        <splash density="port-hdpi" src="assets/splash-480x800.png"/>
    </platform>
    
    <access origin="*"/>
    <access origin="https://ufobeep.com"/>
    <access origin="wss://ufobeep.com"/>
    
    <plugin name="cordova-plugin-camera"/>
    <plugin name="cordova-plugin-geolocation"/>
    <plugin name="cordova-plugin-device-orientation"/>
    <plugin name="cordova-plugin-vibration"/>
    <plugin name="cordova-plugin-local-notification"/>
    <plugin name="cordova-plugin-network-information"/>
    <plugin name="cordova-plugin-whitelist"/>
    
</widget>
